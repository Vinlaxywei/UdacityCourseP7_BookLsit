<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/material_one_cell"
    android:paddingBottom="@dimen/material_one_cell"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        tools:text="书名"/>

    <TextView
        android:id="@+id/author_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/author"/>

    <TextView
        android:id="@+id/publisher_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/publisher"/>

    <TextView
        android:id="@+id/publishedDate_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/publisdate"/>

</LinearLayout>